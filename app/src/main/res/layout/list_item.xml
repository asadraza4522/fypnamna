<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_190sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="AWS Security"
                android:textColor="#000000"
                android:textSize="@dimen/_21sdp" />

            <TextView
                android:id="@+id/availableguards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/companyname"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Available Guards ::  4"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/availableguards"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Contact No  ::  03459342623"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_17sdp" />

            <Button
                android:id="@+id/request_guard"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact"
                android:layout_marginLeft="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/colorPrimary"
                android:text="Request Guard"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>