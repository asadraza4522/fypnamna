<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Company.CompanyDashboard">


    <ImageView
        android:id="@+id/notification2"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_110sdp"
        android:background="#CDC8C8" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_150sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duty scheldule"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card6"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/_37sdp"
        android:layout_marginTop="@dimen/_150sdp"
        android:layout_toRightOf="@id/card1"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Guards"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="60dp"
        android:layout_below="@id/card1"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate Schedule"
                android:textColor="#fff"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card7"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="60dp"
        android:layout_below="@id/card6"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/card2"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exchange Requests"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card8"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="60dp"
        android:layout_below="@id/card7"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/card4"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Report"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="60dp"
        android:layout_below="@id/card2"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Post"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="60dp"
        android:layout_below="@id/card3"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Post"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="60dp"
        android:layout_below="@id/card4"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profit generator"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#0B59A2">

        <!--        <ImageView-->
        <!--            android:layout_width="42dp"-->
        <!--            android:layout_height="34dp"-->
        <!--            android:layout_marginLeft="@dimen/_105sdp"-->
        <!--            android:layout_marginTop="@dimen/_5sdp"-->
        <!--            android:src="@drawable/home" />-->

        <ImageView
            android:id="@+id/notifications"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_notifications_active_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/abril_fatface"
            android:text="Home"
            android:textColor="#fff"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />
    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/company_menu"
        tools:ignore="MissingClass" />
</RelativeLayout>