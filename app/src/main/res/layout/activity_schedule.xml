<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Company.ScheduleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/meeeting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="Meeting Schedules"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:id="@+id/itemListView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_below="@id/toolbar2"
        android:layout_marginTop="@dimen/_40sdp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@id/itemListView"
        android:layout_marginLeft="@dimen/_90sdp"
        android:layout_marginTop="3dp"
        android:background="@color/colorAccent"
        android:text="Add Schedule"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

</RelativeLayout>