<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExchangeRequest">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_480sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="sans-serif"
                android:text="Company Name::"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/inputname"
                android:layout_width="@dimen/_123sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@id/t1"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="sans-serif"
                android:text="Required No of Guards::"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/inputnoofguards"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/inputname"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@id/t2"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t2"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="sans-serif"
                android:text="No of Days::"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/inputnoofdays"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t2"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@id/t3"
                android:lines="2"
                android:maxLines="4"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t3"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="sans-serif"
                android:text="Requested Time Duration"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t4"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="sans-serif"
                android:text="From"
                android:textColor="#000000"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/startingtime"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t4"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@id/t5"
                android:lines="2"
                android:maxLines="4"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t4"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@id/startingtime"
                android:fontFamily="sans-serif"
                android:text="Till"
                android:textColor="#000000"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/endingtime"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t4"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@id/t6"
                android:lines="2"
                android:maxLines="4"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t6"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="sans-serif"
                android:text="Contact No.::"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/contactinfo"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t6"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@id/t7"
                android:lines="2"
                android:maxLines="4"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t7"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="sans-serif"
                android:text="Address::"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/addressinfo"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t7"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@id/t8"
                android:lines="2"
                android:maxLines="4"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/t9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t8"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="sans-serif"
                android:text="Request Description::"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t9"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:lines="2"
                android:maxLines="4"
                android:textColor="#000000"
                android:textSize="@dimen/_16sdp" />

            <Button
                android:id="@+id/approverequest"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@color/colorPrimary"
                android:text="Approve Request"
                android:textColor="#ffff"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancelrequest"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_toRightOf="@id/approverequest"
                android:background="#D61507"
                android:text="Cancel Request"
                android:textColor="#ffff"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>