<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Company.CreateScheduleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#0B59A2">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/abril_fatface"
            android:src="@drawable/ic_baseline_meeting_room_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="Meeting Schedule"
            android:textColor="#ffff"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="97dp"
        android:text="Customer Name" />

    <EditText
        android:id="@+id/editTextItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextItem"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="18dp"
        android:text="Day of Meeting" />

    <EditText
        android:id="@+id/editTextModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="-2dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/selectdate"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_toRightOf="@id/editTextModel"
        android:background="#0B59A2"
        android:text="select day"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextModel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="18dp"
        android:text="Time of Meeting" />

    <EditText
        android:id="@+id/editTextSerial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/selecttime"
        android:layout_width="120dp"

        android:layout_height="50dp"
        android:layout_below="@id/textView3"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_toRightOf="@id/editTextSerial"
        android:background="#0B59A2"
        android:text="select time"
        android:textColor="#fff"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSerial"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSerial"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="6dp"
        android:text="Location" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="225dp"
        android:layout_height="58dp"
        android:layout_below="@id/editTextID"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_120sdp"
        android:layout_marginTop="28dp"
        android:background="#0B59A2"
        android:text="Create"
        android:textColor="#fff" />
</RelativeLayout>