<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".CustomerOptionActivity">
    <TextView
        android:id="@+id/nameOfCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/name_of_the_company"
        android:textColor="#0077D2"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteY="7dp" />
    <LinearLayout
        android:id="@+id/optionLayout"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical">

    <Button
        android:id="@+id/showGuardShift"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="#0B59A2"
        android:text="View Guards Shift"
        android:textColor="#ffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/trackLocation"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="58dp"
        android:layout_below="@id/showGuardShift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="#0B59A2"
        android:text="Track Guard Location"
        android:textColor="#fff"
        android:textSize="16dp"
        android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>